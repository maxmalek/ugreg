// maiden can optionally serve .well-known entries for matrix if there's no other service providing those
// Internally, this spawns another separate webserver instance.

{"wellknown":{
        "listen": [
            { "host": "0.0.0.0", "port": 443, "ssl": true },
        ],
        "cert": "fullchain.pem",
        "listen_threads": 1, // this does no work, don't need more than 1 thread

        // JSON data served under /.well-known/matrix/client
        "client": {
            "m.homeserver": {
                "base_url": "http://localhost:8008"
            },
            "m.identity_server": {
                "base_url": "http://localhost:8090"
            }
        },

        // JSON data served under /.well-known/matrix/server
        "server": {
            "m.server": "localhost:8008"
        }
}}
